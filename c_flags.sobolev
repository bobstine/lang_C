# Need to customize for mac or linux
COMPILER = gcc
# LIBTOOL_CMD = libtool --mode=link $(above_infinity) -o $@ # something
LIBTOOL_CMD = ar -rc $@ $(above_infinity)                 # linux
# LIBTOOL_CMD = libtool  -static -o $@ $(above_infinity)    # mac
# -fexcess-precision=fast   is to keep fp speed, avoiding c99 compliance
# -mtune core2  for Core 2 processor
# -msse4 for more SSE optimization (-O3)
CFLAGS = -g -Wall -USINGLE -W -Woverloaded-virtual $(OPT) -fmessage-length=0 -fexcess-precision=fast
GCC = g++ $(INCLUDES) $(LDFLAGS) 
CC  = g++ $(INCLUDES) $(LDFLAGS)

